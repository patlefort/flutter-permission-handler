[Unit]
Description=Start a new network namespace.
After=syslog.target network-online.target
BindsTo=netns-helper-postup@%i.service
Before=netns-helper-postup@%i.service

[Service]
Type=oneshot
RemainAfterExit=true

ExecStart=env netns-helperctl %i netns create
ExecStop=env netns-helperctl %i netns delete

PrivateNetwork=true

[Install]
WantedBy=multi-user.target
