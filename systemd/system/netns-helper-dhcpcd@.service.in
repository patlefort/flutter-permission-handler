[Unit]
Description=Run dhcpcd in a network namespace.
Documentation=man:dhcpcd(8)
After=netns-helper@%i.service netns-helper-macvlan@%i.service netns-helper-bridged@%i.service
Before=netns-helper-postup@%i.service
BindsTo=netns-helper@%i.service
JoinsNamespaceOf=netns-helper@%i.service
PartOf=netns-helper@%i.target

[Service]
Type=simple
ConfigurationDirectory=netns-helper
RuntimeDirectory=netns-helper-dhcpcd-%i
ExecStart=dhcpcd -q -B --config "/etc/netns-helper/ns/%i-dhcpcd.conf"
ExecReload=kill -HUP $MAINPID

BindPaths=-/etc/netns/%i/resolv.conf:/etc/resolv.conf
BindPaths=-/etc/netns/%i/nsswitch.conf:/etc/nsswitch.conf
BindPaths=-%t/netns-helper-%i/resolvconf.conf:/etc/resolvconf.conf
BindPaths=%t/netns-helper-dhcpcd-%i:%t/dhcpcd
BindPaths=%t/netns-helper-dhcpcd-%i:/var/lib/dhcpcd

PrivateDevices=true
PrivateNetwork=true
ProtectSystem=true
ProtectHome=true

[Install]
RequiredBy=netns-helper@%i.target